<config>
    <sections>
        <payment>
            <groups>
                <mercadopago_transparentboleto module="mercadopago_transparentboleto">
                    <label>MercadoPago Transparent - Boleto</label>
                    <sort_order>101</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
			    <comment>
				<![CDATA[
				  Para o funcionamento do Boleto é necessário configurar as Credenciais "CLIENT_ID" e "CLIENT_SECRET" em "MercadoPago - Cartão de Crédito"
				]]>
			    </comment>
                        </active>
                        <title translate="label">
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </title>
		    
		    
			<banner_checkout translate="label">
                            <label>Banner Checkout</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </banner_checkout>
			
			<sort_order translate="label">
                            <label>Posição no Checkout</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <frontend_class>validate-number</frontend_class>
                        </sort_order>
			
                    </fields>
                </mercadopago_transparentboleto>
            </groups>
        </payment>
    </sections>
</config>